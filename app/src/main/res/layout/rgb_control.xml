<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:text="R"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/umeinfo_tv_r"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="255"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/umeinfo_tv_r_txt"
            android:textSize="18sp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/umeinfo_tv_r" android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"/>
    <TextView
            android:text="G"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/umeinfo_tv_g" android:textSize="18sp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/umeinfo_tv_r"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"/>
    <TextView
            android:text="255"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:layout_height="wrap_content"
            android:id="@+id/umeinfo_tv_g_txt" app:layout_constraintStart_toEndOf="@+id/umeinfo_tv_g"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/umeinfo_tv_r_txt"/>
    <TextView
            android:text="B"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/umeinfo_tv_b" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/umeinfo_tv_g" android:textSize="18sp"/>
    <TextView
            android:text="255"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/umeinfo_tv_b_txt" android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/umeinfo_tv_b" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/umeinfo_tv_g_txt"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp" app:srcCompat="@mipmap/broadlink_ic_add_failure"
            android:id="@+id/umeinfo_iv_rgb_bg" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/umeinfo_btn_switch_on_press"
            android:id="@+id/umeinfo_iv_power" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp" android:layout_marginRight="24dp"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/umeinfo_btn_switch_on_press"
            android:id="@+id/umeinfo_iv_rgb_model1"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/umeinfo_iv_rgb_bg"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/umeinfo_iv_rgb_model2"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/umeinfo_btn_switch_on_press"
            android:id="@+id/umeinfo_iv_rgb_model2"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/umeinfo_iv_rgb_bg"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/umeinfo_iv_rgb_model1"
            app:layout_constraintRight_toLeftOf="@+id/umeinfo_iv_rgb_model3"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/umeinfo_btn_switch_on_press"
            android:id="@+id/umeinfo_iv_rgb_model3"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/umeinfo_iv_rgb_bg"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/umeinfo_iv_rgb_model2"
            app:layout_constraintRight_toRightOf="@+id/umeinfo_iv_rgb_model4"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/umeinfo_btn_switch_on_press"
            android:id="@+id/umeinfo_iv_rgb_model4"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/umeinfo_iv_rgb_bg"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/umeinfo_iv_rgb_model3"
            app:layout_constraintRight_toRightOf="@+id/umeinfo_iv_rgb_model5"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/umeinfo_btn_switch_on_press"
            android:id="@+id/umeinfo_iv_rgb_model5"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/umeinfo_iv_rgb_bg"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/umeinfo_iv_rgb_model4"
            app:layout_constraintRight_toRightOf="parent"/>
    <TextView
            android:text="亮度调节"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/umeinfo_tv_brightness_control" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/umeinfo_iv_rgb_model1" android:textSize="18sp"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/umeinfo_pb_control"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/umeinfo_tv_brightness_control"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/umeinfo_btn_switch_on_press"
            android:id="@+id/umeinfo_iv_rgb_black"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/umeinfo_iv_rgb_model1"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/umeinfo_btn_switch_on_press"
            android:id="@+id/imageView7" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/umeinfo_iv_rgb_model5"/>


    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/umeinfo_btn_switch_on_press"
            android:id="@+id/umeinfo_iv_rgb_colours"
            app:layout_constraintBottom_toTopOf="@+id/umeinfo_tv_rgb_white"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/umeinfo_iv_rgb_white"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/umeinfo_btn_switch_on_press"
            android:id="@+id/umeinfo_iv_rgb_white"
            app:layout_constraintBottom_toTopOf="@+id/umeinfo_tv_rgb_white"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/umeinfo_iv_rgb_colours"
            app:layout_constraintRight_toRightOf="@+id/umeinfo_iv_rgb_move"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/umeinfo_btn_switch_on_press"
            android:id="@+id/umeinfo_iv_rgb_move"
            app:layout_constraintBottom_toTopOf="@+id/umeinfo_tv_rgb_white"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@+id/umeinfo_iv_rgb_white"
            app:layout_constraintRight_toRightOf="parent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/umeinfo_tv_rgb_colours"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            android:textSize="18sp"
            android:text="彩色"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            app:layout_constraintRight_toLeftOf="@+id/umeinfo_tv_rgb_white"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/umeinfo_tv_rgb_white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:text="色温"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/umeinfo_tv_rgb_colours"
            app:layout_constraintRight_toRightOf="@+id/umeinfo_tv_rgb_move"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/umeinfo_tv_rgb_move"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_weight="1"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:text="动态模式"
            android:gravity="center"
            app:layout_constraintLeft_toRightOf="@+id/umeinfo_tv_rgb_white"
            app:layout_constraintRight_toRightOf="parent"/>
</android.support.constraint.ConstraintLayout>
