<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/coupon_left_red"
            android:id="@+id/rgb_item_custom_icon" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>
    <TextView
            android:text="自定义"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rgb_item_custom_name" app:layout_constraintStart_toEndOf="@+id/rgb_item_custom_icon"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="渐变"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rgb_item_custon_model" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/rgb_item_custom_name"
            app:layout_constraintStart_toEndOf="@+id/rgb_item_custom_icon" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:textSize="18sp"/>
    <TextView
            android:text="速度：16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rgb_item_custom_speed" app:layout_constraintStart_toEndOf="@+id/rgb_item_custom_icon"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/rgb_item_custon_model" android:textSize="18sp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@mipmap/breakfast_radiobutton_checked"
            android:id="@+id/rgb_item_custom_edit" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"/>
</android.support.constraint.ConstraintLayout>
